[Unit]
Description=LibyaIntel Web (Next.js)
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=libyaintel
Group=libyaintel
WorkingDirectory=/opt/libyaintel/web
EnvironmentFile=/etc/libyaintel/libyaintel.env
Environment=NODE_ENV=production
Environment=NEXT_TELEMETRY_DISABLED=1
Environment=API_BASE=http://127.0.0.1:8000
Environment=HOSTNAME=127.0.0.1
Environment=PORT=3000
ExecStart=/usr/bin/node /opt/libyaintel/web/.next/standalone/server.js

Restart=always
RestartSec=5

StandardOutput=journal
StandardError=journal
SyslogIdentifier=libyaintel-web

[Install]
WantedBy=multi-user.target
